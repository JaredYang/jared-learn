<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss\} %-5p] [%t] (%c:%L) - %m%n" />
            <!--<param name="ConversionPattern" value="[%-5p] (%c:%L) - %m%n" /> -->
    </layout>
</appender>

<!-- log detail configuration -->
    <logger name="com.opensymphony.xwork2.ognl" additivity="false">
        <level value="ERROR"/>
    </logger>
    <logger name="com.jared" additivity="true">
        <level value="debug"/>
    </logger>
    <logger name="org.springframework.beans.factory" additivity="true">
        <level value="debug"/>
    </logger>

    <root>
        <level value="INFO"/>
        <appender-ref ref="stdout"/>
    </root>
</log4j:configuration>
