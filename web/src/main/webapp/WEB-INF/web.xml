    <servlet>
        <servlet-name>jared</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>jared</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/ftl/common/404.ftl</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/ftl/common/500.ftl</location>
